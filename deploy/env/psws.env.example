# ============================================================
# DJANGO CORE
# ============================================================
DJANGO_SECRET_KEY="change_me"
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost

# Optional: override module paths if you change project layout
DJANGO_ROOT_URLCONF=psws.urls
DJANGO_WSGI_APPLICATION=psws.wsgi.application

DJANGO_LOGIN_REDIRECT_URL=/home
DJANGO_LOGIN_URL=/accounts/login/

# Keep legacy default if you want to avoid migration changes:
DJANGO_DEFAULT_AUTO_FIELD=django.db.models.AutoField

# ============================================================
# DATABASE (MariaDB/MySQL)
# ============================================================
PSWS_DB_ENGINE=django.db.backends.mysql
PSWS_DB_NAME=change_me
PSWS_DB_USER=change_me
PSWS_DB_PASSWORD=change_me
PSWS_DB_HOST=localhost
PSWS_DB_PORT=3306
PSWS_DB_CONN_MAX_AGE=3600

# ============================================================
# LOCALE / TIME
# ============================================================
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=UTC

# ============================================================
# STATIC / MEDIA
# ============================================================
DJANGO_STATIC_URL=/static/
DJANGO_MEDIA_URL=/media/
# For dev: store uploads in repo/local folder
DJANGO_MEDIA_ROOT=./media

# ============================================================
# CRISPY FORMS
# ============================================================
DJANGO_CRISPY_TEMPLATE_PACK=bootstrap4

# ============================================================
# EMAIL (leave blank if unused)
# ============================================================
DJANGO_EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
DJANGO_EMAIL_HOST=smtp.domain.here
DJANGO_EMAIL_PORT=25
DJANGO_EMAIL_USE_TLS=true
DJANGO_EMAIL_USE_SSL=false
DJANGO_DEFAULT_FROM_EMAIL=change_me@your.domain.here
DJANGO_SERVER_EMAIL=change_me@your.domain.here
# ADMINS format: "Name:email,Name2:email2"
DJANGO_ADMINS=""

# ============================================================
# SECURITY TOGGLES (prod usually = true; dev usually = false)
# Only enable HSTS/redirect once HTTPS is correct.
# ============================================================
DJANGO_SECURE_SSL_REDIRECT=false
DJANGO_SESSION_COOKIE_SECURE=false
DJANGO_CSRF_COOKIE_SECURE=false

DJANGO_HSTS_SECONDS=0
DJANGO_HSTS_INCLUDE_SUBDOMAINS=false
DJANGO_HSTS_PRELOAD=false

DJANGO_X_FRAME_OPTIONS=DENY
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=true
DJANGO_SECURE_REFERRER_POLICY=same-origin

# If behind a reverse proxy that sets X-Forwarded-Proto:
DJANGO_SECURE_PROXY_SSL=false
DJANGO_USE_X_FORWARDED_HOST=false

# ============================================================
# LOGGING
# ============================================================
DJANGO_LOG_LEVEL=INFO
DJANGO_LOG_FILE=./logs/django.log
# Comma-separated: console,file
DJANGO_LOG_HANDLERS=file

# ============================================================
# PUBLIC CONFIG
# ============================================================
MAPBOX_ACCESS_TOKEN="change_me"
ACCOUNT_ACTIVATION_LOG_PATH=/var/log/django/

# ============================================================
# STATION STATUS CONFIG
# ============================================================
ONLINE_CUT_OFF_HOURS = 24 # 1 day
POSSIBLY_ONLINE_CUT_OFF_HOURS = 120 #5 days
RETIREMENT_CUT_OFF_HOURS = 504 # 21 days